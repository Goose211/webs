<meta charset="UTF-8">
<title>Express</title>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
</head>
<body>
<div class="container">
<form action="list" method="get" class="form-inline">
<input type="text" name="x" id="x" placeholder="x" class="from-control">
<input type="text" name="y" id="y" placeholder="y" class="from-control">
<input type="submit" value="検索" class="btn btn-primary">
</form>

<div class="row">
<div class="col-md-6">
<h2>検索履歴</h2>
<table>
<% @histories.each do |history| %>
<tr>
<td><%= history.x %>,<%= history.y %></td>

<td>
<% if history.favorite %>
<form action="<%= history.id %>/update" method="post">
<input type="submit" value="解除" class="btn btn-warning">
</form>
<% else %>

<form action="<%= history.id %>/update" method="post">
<input type="submit" value="お気に入り" class="btn btn-warninf">
</form>
<% end %>
</td>
<td>
<form action="<%=history.id %>/delete" method="post">
<button type="submit" class="btn btn-danger">
<i class="far fa-trash-alt"></i>
</button>
</form>
</td>

</tr>
<% end %>
</table>

</div>
<div class="col-md-6">

<h2><i class="fas fa-star"></i>お気に入り</h2>
<ul>
<% @favorites.each do |favorite| %>
<li><%= favorite.x %>, <%= favorite.y %></li>
<% end %>
</ul>
</div>
</div>

</body>
</html>